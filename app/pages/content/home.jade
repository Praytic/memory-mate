        nav
          ul.tabs
            li.tab.col.s4
              a.btn-flat.active(href='#home') Home
            li.tab.col.s4
              a.btn-flat(href='#browse') Browse
            li.tab.col.s4
              a.btn-flat(href='#profile') Profile
    main
      #home.container
        .fixed-action-btn(style='bottom: 45px; right: 24px;')
          a.waves-effect.waves-light.waves-ripple.btn-floating.btn-large(href='deck.html')
            i.large.material-icons add
        div
          br
          ul.collapsible.popout(data-collapsible='accordion')
            li
              .collapsible-header
                a.dropdown-button(href='#', data-activates='theme-settings', data-beloworigin='true')
                  i.material-icons more_vert
                span First Theme
                span.badge.new 5
              .collapsible-body
                .collection
                  a.collection-item(href='deck.html') First Deck in First Theme
                  a.collection-item(href='deck.html') Second Deck in First Theme
                  a.collection-item(href='deck.html')
                    span.badge.new 5
                      Third Deck in First Theme
            li
              .collapsible-header
                a.dropdown-button(href='#', data-activates='theme-settings', data-beloworigin='true')
                  i.material-icons more_vert
                span Second Theme
              .collapsible-body
                .collection
                  a.collection-item(href='deck.html') First Deck in Second Theme
