                      i.material-icons menu
                  li
                    span.brand-logo.left.truncate Memory Mate
              .col.s4.right
                ul.icons.right
                  li
                    a.button-icon(href='search.html')
                      i.material-icons search
                  li
                    a.button-icon(href='settings.html')
                      i.material-icons more_vert
            .hide-on-small-only.hide-on-large-only
              .col.s5
                ul
                  li
                    a.button-icon.hide-on-large-only.right-menu(href='#', data-activates='slide-out')
                      i.material-icons menu
                  li
                    span.brand-logo.left.truncate Memory Mate
              .col.s7.right
                ul.icons.right
                  li.icon
                    a.button-icon.active(href='#home')
                      i.material-icons home
