                  a.collection-item(href='deck.html') Third Deck in Second Theme
            li
              .collapsible-header
                a.dropdown-button(href='#', data-activates='theme-settings', data-beloworigin='true')
                  i.material-icons more_vert
                span Third Theme
                span.badge.new 43
              .collapsible-body
                .collection
                  a.collection-item(href='deck.html')
                    span.badge.new 10
                      First Deck in Third Theme
                  a.collection-item(href='deck.html')
                    span.badge.new 33
                      Second Deck in Third Theme
                  a.collection-item(href='deck.html') Third Deck in Third Theme
      #browse.container
        Browse
      .fixed-action-btn(style='bottom: 45px; right: 24px;')
        a.waves-effect.waves-light.waves-ripple.btn-floating.btn-large(href='publication.html')
          i.large.material-icons add
      #profile.container
        Profile
      #settings.container
        Settings
      #search.container
        Search
    include ../components/side-nav-panel
    include ../components/theme-settings-dropdown
    include ../components/scripts
    script.
      $(document).ready(function () {
        $('#side-nav-panel').load('components/side-nav-panel.html');
        $('#theme-settings-dropdown').load('components/theme-settings-dropdown.html');
      });
      $('.right-menu').sideNav({
        edge: 'left',
        closeOnClick: true
      });
