                      i.material-icons more_vert
            .hide-on-med-and-down
              .col.s4
                span.brand-logo.left.truncate Memory Mate
              .col.s8.right.hide-on-med-and-down(style='height: 100%')
                ul.tabs.right
                  li.tab
                    a.btn-flat(href='#home') Home
                  li.tab
                    a.btn-flat(href='#browse') Browse
                  li.tab
                    a.btn-flat(href='#profile') Profile
                  li.tab
                    a.btn-flat(href='#search') Search
                  li.tab
