doctype html
html(lang='en', xmlns='http://www.w3.org/1999/xhtml')
  head
    include ../components/head
  body.with-menu
    header
      .navbar-fixed.navbar-first
        nav
          ul
            li
              a.button-icon.hide-on-large-only.right-menu(href='#', data-activates='slide-out')
                i.material-icons menu
            li
              a.button-icon(href='home.html')
                i.material-icons keyboard_arrow_left
          span.brand-logo.left.truncate Theme Name
          ul.right.hide-on-med-and-down
            li
              a(href='search.html') Search
            li
              a(href='settings.html') Settings
          ul.right.row.hide-on-large-only
            li
              a.button-icon(href='search.html')
                i.material-icons search
            li
              a.button-icon(href='settings.html')
                i.material-icons more_vert
    main.valign-wrapper
      .fixed-action-btn.horizontal(style='bottom: 45px; right: 24px;')
        a.waves-effect.waves-light.waves-ripple.btn-floating.btn-large(href='editor.html')
          i.large.material-icons mode_edit
      .container.valign.center-align
        .row(style='margin-bottom: 50px')
          h4 Deck Name
          span Random description
        .row(style='margin-bottom: 50px')
          #progress(data-text='66/100', data-percent='66', data-fontsize='28')
        .row(style='margin-bottom: 50px')
          a.waves-effect.waves-light.btn(href='learning.html', style='font-size: 2rem; font-weight: 360') Start
    // Right-Side Navigation Panel
    ul#slide-out.side-nav.fixed
      h5 Library
      ul.collapsible(data-collapsible='accordion')
        li
          .collapsible-header
            span First Theme
            span.badge 5
          .collapsible-body
            .collection
              a.collection-item(href='deck.html') First Deck in First Theme
              a.collection-item(href='deck.html') Second Deck in First Theme
              a.collection-item(href='deck.html')
                span.badge 5
                 Third Deck in First Theme
        li
          .collapsible-header
            span Second Theme
          .collapsible-body
            .collection
              a.collection-item(href='deck.html') First Deck in Second Theme
              a.collection-item(href='deck.html') Second Deck in Second Theme
              a.collection-item(href='deck.html') Third Deck in Second Theme
        li
          .collapsible-header
            span Third Theme
            span.badge 43
          .collapsible-body
            .collection
              a.collection-item(href='deck.html')
                span.badge 10
                 First Deck in Third Theme
              a.collection-item(href='deck.html')
                span.badge 33
                 Second Deck in Third Theme
              a.collection-item(href='deck.html') Third Deck in Third Theme
      h5 Options
      li
        a(href='#!') FAQ
      li
        a(href='index.html') Sign Out
      li
        a(href='#!', onclick='window.close();') Exit
    include ../components/scripts
    script.
      $('.right-menu').sideNav({
      edge: 'left',
      closeOnClick: true
      }
      );
